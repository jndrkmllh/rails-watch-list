<div class="container">
  <h1 class="my-3">My Lists</h1>
  <% @lists.each do |list| %>
    <div>
      <div><%= link_to list.name, list_path(list) %></div>
    </div>
  <% end %>

  <div class="my-3">
    <%= link_to "Create a new Movie list", new_list_path, class: "btn btn-ghost" %>
  </div>
</div>
