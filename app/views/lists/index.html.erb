<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1>Save any kind of movies</h1>
  </div>
</div>
<div class="container mx-auto mt-4">
  <h2 class="my-3">My Lists</h2>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 my-3">
        <%= link_to list_path(list), class: "text-decoration-none" do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_tag list.photo.key, crop: :fill %>)">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="my-3">
      <%= link_to "Create a new Movie list", new_list_path, class: "btn btn-ghost" %>
    </div>
  </div>
</div>
